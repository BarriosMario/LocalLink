<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LocalLink.Login.ChangePassword"
             Shell.NavBarIsVisible="False"
             Shell.FlyoutBehavior="Disabled"
             Shell.TabBarIsVisible="False"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="Black">

    <ScrollView>
        <VerticalStackLayout Padding="25" Spacing="15">

            <!-- Título -->
            <VerticalStackLayout Spacing="5" Margin="0,40,0,10">
                <Label Text="Cambiar contraseña"
                       FontSize="38"
                       TextColor="DarkCyan"
                       HorizontalOptions="Center" />

                <Label x:Name="EmailLabel"
                       TextColor="White"
                       FontSize="14"
                       HorizontalTextAlignment="Center"/>
            </VerticalStackLayout>

            <!-- Nueva contraseña -->
            <Border Stroke="DarkCyan"
                    StrokeThickness="2"
                    StrokeShape="RoundRectangle 10"
                    BackgroundColor="#121212"
                    HeightRequest="60"
                    Padding="15,0">
                <Grid ColumnDefinitions="*, Auto">
                    <Entry x:Name="PassEntry1"
                           IsPassword="True"
                           Placeholder="Nueva contraseña"
                           TextChanged="OnPasswordChanged"
                           PlaceholderColor="Gray"
                           TextColor="White"
                           VerticalOptions="Center"/>
                    <ImageButton x:Name="BtnEye1"
                                 Grid.Column="1"
                                 Source="eye_off_icon.png"
                                 HeightRequest="25"
                                 WidthRequest="25"
                                 BackgroundColor="Transparent"
                                 Clicked="OnShowPasswordClicked"/>
                </Grid>
            </Border>

            <!-- Confirmar contraseña -->
            <Border Stroke="DarkCyan"
                    StrokeThickness="2"
                    StrokeShape="RoundRectangle 10"
                    BackgroundColor="#121212"
                    HeightRequest="60"
                    Padding="15,0">
                <Grid ColumnDefinitions="*, Auto">
                    <Entry x:Name="PassEntry2"
                           IsPassword="True"
                           Placeholder="Confirmar contraseña"
                           TextChanged="OnPasswordChanged"
                           PlaceholderColor="Gray"
                           TextColor="White"
                           VerticalOptions="Center"/>
                    <ImageButton x:Name="BtnEye2"
                                 Grid.Column="1"
                                 Source="eye_off_icon.png"
                                 HeightRequest="25"
                                 WidthRequest="25"
                                 BackgroundColor="Transparent"
                                 Clicked="OnShowPasswordClicked"/>
                </Grid>
            </Border>

            <!-- Requisitos -->
            <VerticalStackLayout Spacing="6" Margin="5,5,0,0">

                <HorizontalStackLayout Spacing="8">
                    <BoxView x:Name="ReqLength" WidthRequest="12" HeightRequest="12" CornerRadius="6" BackgroundColor="White"/>
                    <Label Text="Mínimo 10 caracteres" TextColor="Gray" FontSize="13"/>
                </HorizontalStackLayout>

                <HorizontalStackLayout Spacing="8">
                    <BoxView x:Name="ReqLower" WidthRequest="12" HeightRequest="12" CornerRadius="6" BackgroundColor="White"/>
                    <Label Text="Al menos una minúscula" TextColor="Gray" FontSize="13"/>
                </HorizontalStackLayout>

                <HorizontalStackLayout Spacing="8">
                    <BoxView x:Name="ReqUpper" WidthRequest="12" HeightRequest="12" CornerRadius="6" BackgroundColor="White"/>
                    <Label Text="Al menos una mayúscula" TextColor="Gray" FontSize="13"/>
                </HorizontalStackLayout>

                <HorizontalStackLayout Spacing="8">
                    <BoxView x:Name="ReqNumber" WidthRequest="12" HeightRequest="12" CornerRadius="6" BackgroundColor="White"/>
                    <Label Text="Al menos un número" TextColor="Gray" FontSize="13"/>
                </HorizontalStackLayout>

                <HorizontalStackLayout Spacing="8">
                    <BoxView x:Name="ReqSymbol" WidthRequest="12" HeightRequest="12" CornerRadius="6" BackgroundColor="White"/>
                    <Label Text="Al menos un símbolo" TextColor="Gray" FontSize="13"/>
                </HorizontalStackLayout>

                <HorizontalStackLayout Spacing="8">
                    <BoxView x:Name="ReqMatch" WidthRequest="12" HeightRequest="12" CornerRadius="6" BackgroundColor="White"/>
                    <Label Text="Las contraseñas deben coincidir" TextColor="Gray" FontSize="13"/>
                </HorizontalStackLayout>

            </VerticalStackLayout>

            <!-- Botón -->
            <Button Text="Actualizar contraseña"
                    FontSize="16"
                    FontAttributes="Bold"
                    TextColor="White"
                    BackgroundColor="DarkCyan"
                    HeightRequest="55"
                    CornerRadius="10"
                    Margin="0,15,0,0"
                    Clicked="OnChangePasswordClicked"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
